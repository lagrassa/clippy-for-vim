CC = g++

CFLAGS  = -O2 -I. -I../../include -arch i386 -m32
LDFLAGS	= -L. 

.SUFFIXES: .cpp

SRCS    = ikfastApr18Left.cpp ikfastApr18Right.cpp

OBJECTS	= ikfastApr18Left.o ikfastApr18Right.o

CLEAN   = $(OBJECTS)

.cpp.o:
	$(CC) ${CFLAGS} -fPIC -c $<

library: $(OBJECTS)
	/bin/rm -f libkin.*
	$(CC) $(CFLAGS) -dynamiclib -install_name libkin.dylib -o libkin.dylib $(OBJECTS) $(LDFLAGS) -lm

clean:
	/bin/rm -f $(CLEAN)

